<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jali.arduino" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Jali Arduino</name>
    <description>
        Control Arduino via Bluetooth with Jali Arduino app.
    </description>
    <author email="you@example.com" href="https://yourwebsite.com">
        Jali
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="23" />
    <preference name="android-targetSdkVersion" value="34" />

    <!-- Plugin for Bluetooth -->
    <plugin name="cordova-plugin-bluetoothle" spec="^6.0.0" />
</widget>